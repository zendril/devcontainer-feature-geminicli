{
  "id": "gemini-cli",
  "version": "1.0.0",
  "name": "Gemini CLI (via npm)",
  "documentationURL": "https://geminicli.com/docs/",
  "description": "Installs Google's Gemini CLI for AI-powered terminal access with persistent config",
  "options": {
    "version": {
      "default": "latest",
      "description": "Select the version to install.",
      "proposals": [
        "latest"
      ],
      "type": "string"
    }
  },
  "mounts": [
    {
      "source": "gemini-cli-config",
      "target": "/home/vscode/.gemini",
      "type": "volume"
    }
  ],
  "containerEnv": {
    "GEMINI_CONFIG_DIR": "/home/vscode/.gemini"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "Google.genai-code-assist"
      ]
    }
  },
  "installsAfter": [
    "ghcr.io/devcontainers/features/node"
  ]
}
